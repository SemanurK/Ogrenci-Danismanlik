@model Tek_Fakultesi.ViewModels.PersonelFormViewModel
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel Formu</h2>
@using (Html.BeginForm("Kaydet", "DANISMAN", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.personel.KUL_AD)
        @Html.TextBoxFor(m => m.personel.KUL_AD, new { @class = "form-control" })
    </div>
  
    <div class="form-group">
        @Html.LabelFor(m => m.personel.SİFRE)
        @Html.TextBoxFor(m => m.personel.SİFRE, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.personel.AD)
        @Html.TextBoxFor(m => m.personel.AD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.personel.SOYAD)
        @Html.TextBoxFor(m => m.personel.SOYAD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.personel.UNVAN)
        @Html.TextBoxFor(m => m.personel.UNVAN, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.personel.BIRIMID)
        @Html.DropDownListFor(m => m.personel.BIRIMID, new SelectList(Model.birims, "BIRIMID", "BIRIMAD"), "Birim Seçiniz", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.personel.ROLID)
        @Html.DropDownListFor(m => m.personel.ROLID, new SelectList(Model.Rols, "ID", "ROLADI"), "Rol Seçiniz", new { @class = "form-control" })

    </div>
    @Html.HiddenFor(m => m.personel.ID)
    <button type="submit" class="btn btn-default"> Personel Kaydet</button>
}

