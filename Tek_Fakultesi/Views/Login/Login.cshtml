
@model Tek_Fakultesi.ViewModels.Kullanicilar
    @{
        Layout = null;
    }
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- Favicon icon -->
        <link rel="icon" type="image/png" sizes="16x16" href="~/Content/image/favicon.png">
        <title>Elite Admin Template - The Ultimate Multipurpose admin template</title>

        <!-- page css -->
        <link href="~/Content/css/login-register-lock.css" rel="stylesheet">
        <!-- Custom CSS -->
        <link href="~/Content/css/style.min.css" rel="stylesheet">


        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body class="skin-default card-no-border">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="loader">
                <div class="loader__figure"></div>
                <p class="loader__label">Elite admin</p>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Main wrapper - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <section id="wrapper">
            <div class="login-register" style="background-image:url(../../Content/image/login-register.jpg);">
               
                <div class="row">                   
                        <div class="col-sm-12">
                            <div class="login-box card">

                                <div class="card-body">
                                    <form class="form-horizontal form-material text-center" id="loginform" action="/Login/Login" method="post">
                                        <a href="javascript:void(0)" class="db"><h3><b> Danışman / Öğrenci Girişi</b></h3> </a>

                                        <div class="form-group m-t-40">
                                            <div class="col-xs-12"> 
                                                @Html.TextBoxFor(m=>m.Kul_ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12">

                                                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", type = "password", placeholder = "Şifre" })
                                            </div>
                                        </div>

                                        <div class="form-group text-center m-t-20">
                                            <div class="col-xs-12">
                                                @ViewBag.Mesaj

                                                <button class="btn btn-info btn-lg btn-block text-uppercase btn-rounded" type="submit">Giriş Yap</button>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                                                <div class="social">
                                                    <button class="btn  btn-facebook" data-toggle="tooltip" title=" Facebook Hesabı ile Giriş Yap"> <i aria-hidden="true" class="fab fa-facebook-f"></i> </button>
                                                    <button class="btn btn-googleplus" data-toggle="tooltip" title=" Google Hesabı ile Giriş Yap"> <i aria-hidden="true" class="fab fa-google-plus-g"></i> </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group m-b-0">
                                            <div class="col-sm-12 text-center">
                                                Henuz hesabın yok mu? <a href="pages-register2.html" class="text-primary m-l-5"><b>Kayıt Ol</b></a>
                                            </div>
                                        </div>

                                    </form>
                                    <form class="form-horizontal" id="recoverform" action="index.html">
                                        <div class="form-group ">
                                            <div class="col-xs-12">
                                                <h3>Şifre Yenileme</h3>
                                                <p class="text-muted">Mail adresinizi giriniz,yenileme kodu gelecektir. </p>
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <div class="col-xs-12">
                                                <input class="form-control" type="text" required="" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="form-group text-center m-t-20">
                                            <div class="col-xs-12">
                                                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Yenile</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                               
                        </div>
                        
                        </div>
                    
            </div>
        </section>

        <!-- ============================================================== -->
        <!-- End Wrapper -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- All Jquery -->
        <!-- ============================================================== -->
        <script src="~/Scripts/jquery-3.2.1.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <!--Custom JavaScript -->
        <script type="text/javascript">
        $(function() {
            $(".preloader").fadeOut();
        });
        $(function() {
            $('[data-toggle="tooltip"]').tooltip()
        });
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function() {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
        </script>

    </body>

</html>
